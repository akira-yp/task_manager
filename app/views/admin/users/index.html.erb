<h2>ユーザー一覧</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ユーザー名</th>
      <th scope="col">タスク数</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="user_row">
        <td><%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td>
          <%= link_to "詳細",admin_user_path(user.id),class:"btn btn-sm btn-outline-secondary show-btn" %>
          <%= link_to "編集", edit_admin_user_path(user.id),class:"btn btn-sm btn-outline-secondary edit-btn" %>
          <%= link_to "削除",admin_user_path(user.id), method: :delete, data: { confirm: '削除してよろしいですか？'},class:"btn btn-sm btn-outline-danger delete-btn" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
