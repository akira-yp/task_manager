<%= form_with(model:@task, local:true) do |f| %>
  <div class="">
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <div class="">
    <div class="">
      <%= f.label :title %>
    </div>
    <div class="">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="">
    <div class="">
      <%= f.label :content %>
    </div>
    <div class="">
      <%= f.text_area :content %>
    </div>
  </div>
  <div class="">
    <%= f.submit %>
  </div>
<% end %>
