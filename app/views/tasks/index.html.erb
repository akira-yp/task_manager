<h1><%= t('view.index_tasks') %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td class"task_title"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to "show", task_path(task.id) %></td>
        <td><%= link_to "edit", edit_task_path(task.id) %></td>
        <td><%= link_to "destroy", task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
