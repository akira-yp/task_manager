<h1><%= t('view.index_tasks') %></h1>

<%= link_to "終了期限でソート", tasks_path(sort_expired:"true") %>
<%= link_to "" %>

<%= form_with(scope: :task, url: tasks_path, method: :get, local: true) do |f| %>
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status,Task.statuses.keys,{prompt: "選択してください"}, class: "status-select" %>
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.content') %></th>
      <th><%= t('view.expired_at') %></th>
      <th><%= t('view.status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td class"task_title"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.expired_at.strftime("%m月%d日%H:%M") %></td>
        <td><%= task.status %></td>
        <td><%= link_to t('view.show'), task_path(task.id) %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td>
        <td><%= link_to t('view.destroy'), task_path(task.id), method: :delete, data: { confirm: '削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
